  <workflow-item name="item3" out-name="item1" type="task">
    <display-name><![CDATA[Form JSON]]></display-name>
    <script encoded="false"><![CDATA[// Get json content from Get Aliases return and parse them into an object.
var obj = JSON.parse(contentGetAliases);
var result = obj.result;

// Return items from object and set variables
var refRecord = result[0]._ref;
var aliases = result[0].aliases;
System.log("Reference Record: "+refRecord);
System.log("Aliases: "+aliases);
System.log("Alias Count: "+aliases.length);

// Create new Alias array and leave out removeAlias
var remainingAliases = [];
for(a in aliases){
	if(removeAlias != aliases[a]) {
		remainingAliases.push(aliases[a]);
	}
}
System.log("New Alias Count: "+remainingAliases.length);

//Begin building new json content string to send back.
var content = '{"aliases": [';

// If current aliases exist, add to json content string.
if(remainingAliases.length > 0) {
	for(a in remainingAliases) {
		if(a==0) {
			content = content+'"'+remainingAliases[a];
		} else {
			content = content+'","'+remainingAliases[a];
		}
	}
}
// Close off content string and log.
content = content+'"]}';
System.log("JSON Content: "+content);]]></script>
