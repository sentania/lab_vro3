  <workflow-item name="item1" out-name="item2" type="link" linked-workflow-id="bc4cf05a-0db3-4094-94bf-0411caf019eb">
    <display-name><![CDATA[Copy Resource To Guest with SSH Keys]]></display-name>
    <in-binding>
