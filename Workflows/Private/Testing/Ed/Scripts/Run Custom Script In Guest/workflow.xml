  <workflow-item name="item3" out-name="item4" type="task">
    <display-name><![CDATA[Execute Script on Script Server]]></display-name>
    <script encoded="false"><![CDATA[var mySSHSession = new SSHSession(VM.name,VMUsername);
mySSHSession.connectWithIdentity(keyFile,"");

var myCommand = pathToExecute + " " + arguments;

System.log("===Execute Script on Guest====");
System.log("	VM Name: " + VM.name);
System.log("	VM Username: " + VMUsername);
System.log("	Command to run: " + myCommand);

mySSHSession.executeCommand(myCommand,true);

var scriptOutput = mySSHSession.getOutput();
var scriptError = mySSHSession.getError();
var exitCode = mySSHSession.exitCode;
System.log("===Script Output===");
System.log(scriptOutput)
System.log("===Script Error===");
System.log(scriptError);
System.log("===Exit Code===");
System.log(exitCode);

mySSHSession.disconnect();

]]></script>
    <in-binding>
      <bind name="VMUsername" type="string" export-name="VMUsername"/>
      <bind name="VM" type="VC:VirtualMachine" export-name="VM"/>
      <bind name="arguments" type="string" export-name="arguments"/>
      <bind name="keyFile" type="string" export-name="keyFile"/>
      <bind name="pathToExecute" type="string" export-name="pathToExecute"/>
    </in-binding>
    <out-binding>
