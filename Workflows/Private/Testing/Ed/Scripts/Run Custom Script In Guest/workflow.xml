  <workflow-item name="item2" out-name="item3" type="task">
    <display-name><![CDATA[Set Arguments]]></display-name>
    <script encoded="false"><![CDATA[//If the program we are executing is the script name we copied to the guest, then don't past the script name as an argument
//  If they are not equal, then we will pass the first argument as the script name
//  For example, c:\windows\system32\WindowsPowershell\v1.0\powershell.exe example.ps1 %ARGUMENTS%
if(GuestFileName != ProgramPathToExecuteScript)
{
	arguments = GuestFileName + " " + ScriptArguments;
}
//In this case, the path was the script itself, it doesn't make sense to pass the script name as an argument to the
//  script
//  for example, c:\temp\test.bat test.bat %ARGUMENTS% doesn't make sense
else
{
	arguments = ScriptArguments;
}

pathToExecute = ProgramPathToExecuteScript;

System.log("====Set Arguments for script====");

System.log("    Path to Execute: " + pathToExecute);
System.log("    Arguments: " + arguments);
System.log("    Guest File Name: " + GuestFileName);
]]></script>
    <in-binding>
      <bind name="TargetResource" type="ResourceElement" export-name="TargetResource"/>
      <bind name="TargetDirectoryOnGuest" type="string" export-name="TargetDirectoryOnGuest"/>
      <bind name="VM" type="VC:VirtualMachine" export-name="VM"/>
      <bind name="ProgramPathToExecuteScript" type="string" export-name="ProgramPathToExecuteScript"/>
      <bind name="ScriptArguments" type="string" export-name="ScriptArguments"/>
      <bind name="GuestFileName" type="string" export-name="GuestFileName"/>
    </in-binding>
    <out-binding>
      <bind name="arguments" type="string" export-name="arguments"/>
      <bind name="pathToExecute" type="string" export-name="pathToExecute"/>
    </out-binding>
    <position y="55.40909090909091" x="344.5"/>
