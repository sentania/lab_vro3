    <display-name><![CDATA[Copy file to host with keys]]></display-name>
    <script encoded="false"><![CDATA[var mySSHSession = new SSHSession(vm.name,vmUsername);
mySSHSession.connectWithIdentity(keyFile,"");

System.log("====Copying file from vCO to Guest=====");
System.log("	VM Name: " + vm.name);
System.log("	VM Username: " + vmUsername);
System.log("	Key file: " + keyFile);
System.log("	Source File: " + vcoFileName);
System.log("	Destination File: " + guestFilePath);

var copyResults = mySSHSession.putFile(vcoFileName, guestFilePath);
chmod = "chmod 0777 "+ guestFilePath
System.log("Guest file Permission: " + chmod)
mySSHSession.executeCommand(chmod,true);
mySSHSession.disconnect();
if (copyResults == 0) result = true;
else result = false;

System.log("====Results====");
System.log("	Copy Results: " + copyResults);
System.log("	Results: " + result);]]></script>
